# Data storage
DATA_DIR=data

# JWT
JWT_SECRET_KEY=your-super-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# App
APP_NAME=FitView AI
DEBUG=true
API_V1_PREFIX=/api/v1
BASE_URL=http://localhost:8000

# File uploads (local storage for development)
UPLOAD_DIR=uploads

# AI APIs (Phase 3+)
# Google Gemini â€” used for virtual try-on and style variations
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash
GEMINI_IMAGE_MODEL=gemini-3.1-flash-image-preview

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=fitview_dev

# Redis
REDIS_URL=redis://localhost:6379

# AWS S3 / CloudFront
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-s3-bucket-name
CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net

# Security
ALLOWED_ORIGINS=http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# AWS Bedrock (optional)
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_CHAT_MODEL_ID=anthropic.claude-3-5-haiku-20241022
USE_BEDROCK=false
